# VIM / NEOVIM / NVIM / NV

# use for .vimrc and plugin testing
# restart vim by simply ":qa!"
# terminate cycle by killing console...
vimcycle() {
  if [ -z "$1" ]; then
    echo "Usage: vimcycle <file>"
    return 1
  fi
  in_tmux && while [ true ] ; do nvim $1 ; done
}

###########################################################################
# TMUX / TMUXINATOR

# check for active TMUX session
no_tmux() {
  if [ -n "$TMUX" ]; then
    echo "Live TMUX Session!!!"
    return 1
  fi
}

in_tmux() {
  if [ -z $TMUX ]; then
    echo "TMUX NOT STARTED!"
    return 1
  fi
}

alias  tm="tmux"   
alias  mx="tmuxinator" 

alias tmt="in_tmux && tm new-window -c '#{pane_current_path}'"       # new tab
alias tms="in_tmux && tm split-window -v -c '#{pane_current_path}'"  # split win
alias tmv="in_tmux && tm split-window -h -c '#{pane_current_path}'"  # split vert

tmr() {
  no_tmux && tm new \; send "$*" C-m \; attach
}

