# UTIL FUNCTIONS

tkill () {
  local NAME=$1
  if [ -z $NAME ]
  then
  echo "Usage: tkill <process name>"
  else
  ps ax | grep $NAME | grep -v grep | cut -f3 -d' ' | xargs kill -9
  fi
}

