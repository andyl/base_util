###########################################################################
# PROMPT & TITLE UTILITIES

pwd_short() { 
  BASE=$(pwd) 
  if [ "$BASE" = "$HOME" ]; then
    echo "~"
  else
    echo "$(echo $BASE | sed "s|$HOME|~|")"
  fi
}

is_ssh() { 
  if [ -n "$SSH_CLIENT" ] || [ -n "$SSH_TTY" ]; then
      # This is an SSH session
      return 0 
  else
      # This is a local session
      return 1
  fi
}

ssh_prefix() { 
  if is_ssh; then 
    echo "$HOSTNAME:"
  fi
}

ssh_hname() { 
  if is_ssh; then 
    echo $HOSTNAME
  fi
}

ssh_htag() { 
  if is_ssh; then 
    echo "$HOSTNAME: "
  fi
}

exit_status() { 
  es=$? 
  if [ $es -eq 0 ]; then 
    echo -e "${PSGreen}${es}${PSClear}"
      else
    echo -e "${PSRed}${es}${PSClear}"
  fi
}

time_title() {
    echo -ne "\033]0;$(date +%H:%M:%S)\007"
}

xterm_title() { 
  XT="xterm_title"
  USAGE="Usage: $XT <title> - sets the xterm title\n To test: $XT Hello World; sleep 2" 

  if [ $# -eq 0 ]; then
    echo -e $USAGE
    return 1
  fi

  if [[ "$TERM" =~ ^xterm(-256color|-kitty|-ghostty)?$ ]]; then
    echo -ne "\033]0;$@\007" 
  fi 
}

tm_title() {
  echo "z>$(pwd_short)"
}

# MIX COMPLETIONS
function sourcemix() {
  local mc=.mix_completions.bash 
  [ -f $mc ] && source $mc || sourcefile ~/$mc
}

# PS1 Exec
ps1_exec() { 
  sourcemix 
  xterm_title "$(ssh_htag)$(pwd_short)"
  printf ""
}

###########################################################################
# BASH PROMPT

psmin() {
  PS1="\`ps1_exec\`-> "
}

psm() {
  PS1="\`ps1_exec\`-> "
}

psd() { 
  PS1="\`ps1_exec\`-> "
}

psu() {
  PS1="\`ps1_exec\`${PSxSkyBlue}\u@\h\`__git_ps1\` \w|> ${PSClear}" 
}

psalt() { 
  PS1="\`ps1_exec\`${PSxGold3}\u@\h\`__git_ps1\` \w|> ${PSClear}" 
}

if [ -f $GITC ]; then
  source $GITC
  psu
else                             
  psalt
fi

