gopen() {
    # If no arguments and stdin is not a terminal (i.e., being piped to)
    if [ $# -eq 0 ] && [ ! -t 0 ]; then
        # Read from stdin
        while read -r url; do
            [ -n "$url" ] && gio open "$url"
        done
    # If arguments were provided
    elif [ $# -gt 0 ]; then
        # Process each argument as a URL
        for url in "$@"; do
            gio open "$url"
        done
    else
        echo "Usage: gopen URL [URL...]"
        echo "   or: echo URL | gopen"
        return 1
    fi
}

