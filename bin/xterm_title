#!/bin/bash

# Sets the xterm-title

XT="xterm_title"
USAGE="Usage: $XT <title> - sets the xterm title\n To test: $XT Hello World; sleep 2" 

if [ $# -eq 0 ]; then
  echo -e $USAGE
  exit 1
fi

if [ "$TERM" == "xterm" ] || [ "$TERM" == "xterm-kitty" ]; then
  if [ "$1" == "clear" ]; then 
    echo -ne "\033]0;\007" 
  else
    echo -ne "\033]0;$@\007" 
  fi
fi 
