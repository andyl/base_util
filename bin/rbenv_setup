#!/usr/bin/env bash

echo "======================================================="
echo "Setting up .rbenv for `whoami`"

cd

[ -d .rbenv ] || (cp -r /opt/rbenv .rbenv ; rm -rf .rbenv/versions)

cd .rbenv
./update_rbenv.sh

mkdir -p versions
cd versions

for RB_PATH in /opt/rbenv/versions/* 
do
  ln -s $RB_PATH . 2> /dev/null
done

