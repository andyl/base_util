#!/usr/bin/env bash

echo "======================================================="
echo "Setting up .rbenv for `whoami`"

cd

[ -d .rbenv ] || cp -r /opt/rbenv .rbenv

cd .rbenv
./update_rbenv.sh

if [ -z "$1" ]
then
  echo "creating versions symlink"
  mv versions versions.old
  ln -s /opt/rbenv/versions versions
fi

if [ "$1" == "dev" ]
then
  echo "creating development rubies"
  mv versions versions.old
  cp -r /opt/rbenv/versions .
fi

